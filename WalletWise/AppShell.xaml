<!-- AppShell.xaml -->
<Shell
    x:Class="WalletWise.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WalletWise.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Dashboard" Icon="dashboard_icon.png">
            <ShellContent
                Title="Dashboard"
                ContentTemplate="{DataTemplate views:DashboardPage}"
                Route="DashboardPage" />
        </Tab>

        <Tab Title="Conti" Icon="accounts_icon.png">
            <ShellContent
                Title="I Miei Conti"
                ContentTemplate="{DataTemplate views:AccountsPage}"
                Route="AccountsPage" />
        </Tab>
    </TabBar>

</Shell>
