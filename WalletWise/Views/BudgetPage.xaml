<!-- in WalletWise/Views/BudgetPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalletWise.Views.BudgetPage"
             xmlns:viewmodels="clr-namespace:WalletWise.ViewModels"
             xmlns:services="clr-namespace:WalletWise.Services"
             x:DataType="viewmodels:BudgetViewModel"
             Title="Budget"
             BackgroundColor="{StaticResource PageBackground}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="10">
        <Label Grid.Row="0"
               Text="{Binding CurrentMonthDisplay}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding BudgetItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="services:BudgetStatus">
                    <Frame Padding="15" Margin="5" Style="{StaticResource InfoCard}">
                        <!-- INIZIO MODIFICA: Aggiunto riconoscitore di TAP -->
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=GoToEditBudgetCommand}"
                        CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <!-- FINE MODIFICA -->
                        <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10">
                            <Label Grid.Column="0" Text="{Binding Category}" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding SpentAmount, StringFormat='{0:C}'}" TextColor="Red"/>
                                        <Span Text=" / "/>
                                        <Span Text="{Binding BudgetedAmount, StringFormat='{0:C}'}" TextColor="{StaticResource SecondaryText}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Button Grid.Column="2" 
                                    Text="X"
                                    Style="{StaticResource DeleteButton}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=DeleteBudgetCommand}"
                                    CommandParameter="{Binding .}"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="2" 
             Text="Aggiungi/Modifica Budget" 
             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=GoToAddBudgetCommand}" 
             Style="{StaticResource PrimaryButton}" 
             Margin="10"/>
    </Grid>
</ContentPage>