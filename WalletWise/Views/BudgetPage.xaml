<!-- in WalletWise/Views/BudgetPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalletWise.Views.BudgetPage"
             xmlns:viewmodels="clr-namespace:WalletWise.ViewModels"
             xmlns:services="clr-namespace:WalletWise.Services"
             x:DataType="viewmodels:BudgetViewModel"
             Title="Budget"
             BackgroundColor="{StaticResource PageBackground}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="10">

        <Label Grid.Row="0"
               Text="{Binding CurrentMonthDisplay}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="BudgetListContainer" Spacing="10" />
        </ScrollView>

        <Button Grid.Row="2"
                Text="Aggiungi Budget"
                Command="{Binding GoToAddBudgetCommand}"
                Style="{StaticResource PrimaryButton}"
                Margin="10"/>
    </Grid>
</ContentPage>