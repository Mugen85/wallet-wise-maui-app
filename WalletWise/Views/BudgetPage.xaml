<!-- in WalletWise/Views/BudgetPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalletWise.Views.BudgetPage"
             xmlns:viewmodels="clr-namespace:WalletWise.ViewModels"
             xmlns:services="clr-namespace:WalletWise.Services"
             x:DataType="viewmodels:BudgetViewModel"
             Title="Budget"
             BackgroundColor="{StaticResource PageBackground}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="10">

        <Label Grid.Row="0"
               Text="{Binding CurrentMonthDisplay}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding BudgetItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="services:BudgetStatus">
                    <Frame Style="{StaticResource InfoCard}" Padding="15" Margin="5">
                        <!-- Gesto per la Modifica -->
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=GoToEditBudgetCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout Spacing="5">
                            <!-- Riga 1: Categoria, Valori e Tasto Elimina -->
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0"
                                       Text="{Binding Category}"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>

                                <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                    <!-- Valori numerici -->
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="{Binding SpentAmountDisplay}"
                                               TextColor="{Binding CategoryColor}"
                                               FontAttributes="Bold"/>
                                        <Label Text="/"
                                               TextColor="{StaticResource SecondaryText}"/>
                                        <Label Text="{Binding BudgetedAmountDisplay}"
                                               TextColor="{StaticResource SecondaryText}"/>
                                    </HorizontalStackLayout>
                                    <!-- Tasto Elimina -->
                                    <Button Text="X"
                                            Style="{StaticResource DeleteButton}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=DeleteBudgetCommand}"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </Grid>

                            <!-- Riga 2: Barra di Progresso -->
                            <ProgressBar Progress="{Binding Progress}"
                                         ProgressColor="{Binding CategoryColor}"
                                         HeightRequest="8"/>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2"
                Text="Aggiungi Budget"
                Command="{Binding GoToAddBudgetCommand}"
                Style="{StaticResource PrimaryButton}"
                Margin="10"/>
    </Grid>
</ContentPage>