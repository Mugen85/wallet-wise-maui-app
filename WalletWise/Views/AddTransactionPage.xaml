<!-- in WalletWise/Views/AddTransactionPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WalletWise.Views.AddTransactionPage"
             xmlns:viewmodels="clr-namespace:WalletWise.ViewModels"
             x:DataType="viewmodels:AddTransactionViewModel"
             Title="Aggiungi Transazione">

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, *" Padding="20" RowSpacing="15">

        <Label Grid.Row="0" Text="Importo" />
        <Entry Grid.Row="1" Text="{Binding Amount, Converter={StaticResource DecimalConverter}}" Keyboard="Numeric" />

        <Label Grid.Row="2" Text="Descrizione" />
        <Entry Grid.Row="3" Text="{Binding Description}" />

        <Grid Grid.Row="4" ColumnDefinitions="*,*,*" ColumnSpacing="10">
            <VerticalStackLayout>
                <Label Text="Data" />
                <DatePicker Date="{Binding Date}" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Tipo" />
                <Picker ItemsSource="{Binding TransactionTypes}"
                        SelectedItem="{Binding SelectedTransactionType}"
                        ItemDisplayBinding="{Binding Name}"
                        Title="Seleziona tipo"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="2">
                <Label Text="Conto" />
                <Picker ItemsSource="{Binding Accounts}"
                        SelectedItem="{Binding SelectedAccount}"
                        ItemDisplayBinding="{Binding Name}"
                        Title="Seleziona conto"/>
            </VerticalStackLayout>
        </Grid>

        <!-- INIZIO MODIFICA: Sostituito Entry con Picker -->
        <VerticalStackLayout Grid.Row="5">
            <Label Text="Categoria" />
            <Picker ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}"
                    Title="Seleziona categoria" />
        </VerticalStackLayout>
        <!-- FINE MODIFICA -->

        <Button Grid.Row="6" 
                Text="Salva" 
                Command="{Binding SaveTransactionCommand}" 
                Style="{StaticResource PrimaryButton}" 
                VerticalOptions="End"/>
    </Grid>
</ContentPage>